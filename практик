#include <stdio.h>
#include <locale.h>

int main()
{
	setlocale(LC_CTYPE, "RUS");
	int n = 22;
	int k = 10;

	printf("Сейчас %d часа(ов), %d минут(ы), 00 секунд", n, k);

	printf("\nИдет %d минута суток", n * 60 + k);

	printf("\n До полуночи осталось %d часов и %d минут", 23 - n, 59 - k);

	printf("\n С 8:00 прошло %d секунд", n * 22 * 60 + k * 60);

	printf("\n Текущий час =  %d/24 суток и текущая минута = %d/60 часа", n, k);
}
